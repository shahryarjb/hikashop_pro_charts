<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="hikashop" method="upgrade">
	<name>PLG_HIKABACKPRICECHART_HIKASHOP</name>
	<author>Trangell co</author>
	<creationDate>2016</creationDate>
	<copyright>(C) 2016 trangell .Co. All rights reserved.</copyright>
	<license>GPL License</license>
	<authorEmail>info@trangell.com</authorEmail>
	<authorUrl>https://trangell.com</authorUrl>
	<version>0.0.1</version>
	<description>hikashop Price chart plugin | https://trangell.com</description>
	<files>
		<filename plugin="HikaBackPriceChart">HikaBackPriceChart.php</filename>
		<filename>index.html</filename>
		<filename>jquery.slModal.js</filename>
		<filename>jquery.slModal.css</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.plg_hikashop_HikaBackPriceChart.ini</language>
		<language tag="en-GB">en-GB.plg_hikashop_HikaBackPriceChart.sys.ini</language>
		<language tag="fa-IR">fa-IR.plg_hikashop_HikaBackPriceChart.ini</language>
		<language tag="fa-IR">fa-IR.plg_hikashop_HikaBackPriceChart.sys.ini</language>
	</languages>
	<updateservers>
        <server type="extension" priority="1" name="HikaBackPriceChart">https://trangell.com/ext/updates/plugin/plg_hikabackpricechart.xml</server>
    </updateservers>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="price"
					type="text"
					label="PLG_HIKABACKPRICECHART_HIKASHOP_FIELD_PRICE"
					size="120"
					required="true"
				/>

				<field
					name="months"
					type="text"
					label="PLG_HIKABACKPRICECHART_HIKASHOP_FIELD_MONTHS"
					size="120"

				/>
			</fieldset>

		</fields>
	</config>
</extension>
